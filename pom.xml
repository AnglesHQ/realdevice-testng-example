                            </suiteXmlFiles>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>main_example_multidevice</id>
            <properties>
                <!-- arguments to be passed through command line -->
                <saucelabs_endpoint>http://eu1.appium.testobject.com/wd/hub</saucelabs_endpoint>
                <testobject_api_key/>
                <testobject_app_id/>
                <saucelabs_device_name/>
                <saucelabs_platform_name/>
                <saucelabs_platform_version/>
                <url>https://github.com</url>
                <testobject_session_creation_timeout>900000</testobject_session_creation_timeout>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <version>2.18.1</version>
                        <configuration>
                            <suiteXmlFiles>
                                <suiteXmlFile>src/test/java/com/qa/tests/parallel/main_example/testng.xml</suiteXmlFile>
                            </suiteXmlFiles>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>main_example_multibrowser</id>
            <properties>
                <!-- arguments to be passed through command line -->
                <saucelabs_endpoint>https://ondemand.eu-central-1.saucelabs.com:443/wd/hub</saucelabs_endpoint>
                <saucelabs.username/>
                <saucelabs.accessKey/>
                <url>https://github.com</url>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
